{
    "server":{
        "fqdn": "localhost.localdomain",
        "ip": "127.0.0.1",
        "enabled": true,
        "entry_point": "gamma",
        "bind_address": "0.0.0.0",
        "port": 8787
    },
    "checks": {   
        "invalid_check": {
            "command": "/usr/bin/my-fake-check",
            "interval": 5,
            "alert_on": "ok"
        },
        "bat_check": {
            "command": "./bin/check-battery-charge.sh",
            "args": ["-c", "25", "-w", "50"],
            "interval": 9,
            "alert_on": "critical"
        },
        "mem_check": {
            "command": "./bin/check-memory-usage.sh",
            "args": ["-c", "90", "-w", "80"],
            "interval": 2,
            "alert_on": "warning"
        },
        "disk_check_root": {
            "command": "./bin/check-disk-usage.sh",
            "args": ["/", "-c", "75", "-w", "50"],
            "interval": 11,
            "alert_on": "ok"
        },
        "disk_check_home": {
            "command": "./bin/check-disk-usage.sh",
            "args": ["/home", "-c", "75", "-w", "50"],
            "interval": 7,
            "alert_on": "critical"
        }
    }
}


