{
    "agent_name": "my_agent",
    "agent_version": "0.1.0",
    "monitors": {
        "py_check": {
            "type": "check",
            "action": {
                "command_path": "/usr/bin/python",
                "command_args": ["/home/patrrand/py-check.py"],
                "interval": 60
            },
           "handler_ids": ["h_http"]
        },
        "mem_check": {
            "type": "check",
            "action": {
                "command_path": "/usr/bin/bash",
                "command_args": ["/home/patrrand/go-ws/src/github.com/patrickrand/gamma/monitor/checks/monitor-mem.sh","-c 90 -w 80" ],
                "interval": 60
            },
            "handler_ids": ["h_http"]
        }     
    },
    "handlers": { 
        "h_http" : {
            "type": "http",
            "destination": {                
                "host": "localhost",
                "port": 80,
                "subpath": ""
            },
            "parameters": {}
        }
    }
}


