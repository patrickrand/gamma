{
    "agent_name": "my_agent",
    "agent_version": "0.1.0",
    "monitors": {
        "m_check": {
            "type": "check",
            "action": {
                "command": {
                    "path": "/usr/bin/ls",
                    "args": {
                        "-l": {}
                    }
                },
                "interval": 60
            },
            "handler_ids": ["h_http"]
        }     
    },
    "handlers": { 
        "h_http" : {
            "type": "http",
            "destination": {                
                "host": "localhost",
                "port": 80,
                "subpath": ""
            },
            "parameters": {}
        }
    }
}


