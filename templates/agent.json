{
    "agent_id": "templ",
    "host":{
        "id": "localhost"
    },
    "server": {
        "active": true,
        "entrypoint": "/templ",
        "bind_addr": "0.0.0.0",
        "port": 7070
    },
    "checks": {   
        "bat_check": {
            "command": "/usr/bin/bash ./bin/check-battery-charge.sh -c 25 -w 50",
            "interval": 20,
            "alert_on": "critical",
            "handler_ids": ["my_file_writer-1"]
        },
        "mem_check": {
            "command": "/usr/bin/bash ./bin/check-memory-usage.sh -c 90 -w 80",
            "interval": 30,
            "alert_on": "ok",
            "handler_ids": ["my_file_writer-1"]
        },
        "disk_check_root": {
            "command": "/usr/bin/bash ./bin/check-disk-usage.sh / -c 75 -w 50",
            "interval": 20,
            "alert_on": "ok",
            "handler_ids": ["my_file_writer-1"]
        },
        "disk_check_home": {
            "command": "/usr/bin/bash ./bin/check-disk-usage.sh /home -c 75 -w 50",
            "interval": 30,
            "alert_on": "ok",
            "handler_ids": ["my_file_writer-1"]
        }
    },     
    "handlers": { 
        "http_client-1": {
            "type": "http_client",
            "destination": "localhost:8080",                
            "parameters": {}
        },
        "my_file_writer-1": {
            "type": "file_writer",
            "destination": "/dev/stdout",
            "parameters": {}
        }
    }
}


