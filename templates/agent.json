{
    "agent_id": "my_agent",
    "host_id": "localhost",
    "checks": [
        {   
            "id": "py_check",
            "command": "/usr/bin/python ./bin/py-check.py",
            "interval": 60,
            "alert_on": "ok/warning/critical",
            "handler_ids": ["file_handler_1"]
        },
        {
            "id": "mem_check",
            "command": "/usr/bin/bash ./bin/monitor-mem.sh -c 90 -w 80",
            "interval": 30,
            "alert_on": "ok/warning/critical",
            "handler_ids": ["file_handler_1"]
        }
    ],     
    "handlers": { 
        "http_handler_1": {
            "id": "http_handler_1",
            "type": "http",
            "destination": "localhost:8080",                
            "parameters": {}
        },
        "file_handler_1": {
            "id": "file_handler_1",
            "type": "file",
            "destination": "stdout",
            "parameters": {}
        }
    }
}


