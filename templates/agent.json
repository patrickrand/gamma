{
    "agent_id": "my_agent",
    "host_id": "localhost",
    "server": {
        "active": true,
        "entrypoint": "/my_agent",
        "bind_addr": "0.0.0.0",
        "port": 7070
    },
    "checks": {   
        "py_check": {
            "command": "/usr/bin/python ./bin/py-check.py",
            "interval": 10,
            "alert_on": "critical",
            "handler_ids": ["file_writer_1"]
        },
        "mem_check": {
            "command": "/usr/bin/bash ./bin/monitor-mem.sh -c 90 -w 80",
            "interval": 10,
            "alert_on": "ok",
            "handler_ids": ["file_writer_1"]
        }
    },     
    "handlers": { 
        "http_client_1": {
            "type": "http_client",
            "destination": "localhost:8080",                
            "parameters": {}
        },
        "file_writer_1": {
            "type": "file_writer",
            "destination": "/dev/stdout",
            "parameters": {}
        }
    }
}


