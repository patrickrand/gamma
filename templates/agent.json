{
    "agent_id": "templ",
    "host_id": "localhost",
    "server": {
        "active": true,
        "entrypoint": "/templ",
        "bind_addr": "0.0.0.0",
        "port": 7070
    },
    "checks": {   
        "bat_check": {
            "command": "/usr/bin/bash ./bin/check-battery-charge.sh -c 25 -w 50",
            "interval": 2,
            "alert_on": "critical",
            "handler_ids": ["file_writer_1"]
        },
        "mem_check": {
            "command": "/usr/bin/bash ./bin/check-memory-usage.sh -c 90 -w 80",
            "interval": 2,
            "alert_on": "ok",
            "handler_ids": ["file_writer_1"]
        }
    },     
    "handlers": { 
        "http_client_1": {
            "type": "http_client",
            "destination": "localhost:8080",                
            "parameters": {}
        },
        "file_writer_1": {
            "type": "file_writer",
            "destination": "/dev/stdout",
            "parameters": {}
        }
    }
}


