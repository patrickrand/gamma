{
    "agent_id": "my_agent",
    "host_id": "localhost",
    "checks": [
        {   
            "id": "py_check",
            "command": "/usr/bin/python ./bin/py-check.py",
            "interval": 60,
            "alert_on": "critical",
            "handler_ids": ["file_writer_1"]
        },
        {
            "id": "mem_check",
            "command": "/usr/bin/bash ./bin/monitor-mem.sh -c 90 -w 80",
            "interval": 30,
            "alert_on": "ok",
            "handler_ids": ["file_writer_1"]
        }
    ],     
    "handlers": { 
        "http_client_1": {
            "type": "http_client",
            "destination": "localhost:8080",                
            "parameters": {}
        },
        "file_writer_1": {
            "type": "file_writer",
            "destination": "/dev/stdout",
            "parameters": {}
        }
    }
}


