{
    "server":{
        "id": "my-host",
        "fqdn": "localhost.localdomain",
        "ip": "127.0.0.1",
        "ssl": false,
        "active": true,
        "entrypoint": "/gamma",
        "bind_addr": "0.0.0.0",
        "port": 9911
    },
    "checks": {   
        "invalid_check": {
            "command": "/usr/bin/my-fake-check",
            "interval": 5,
            "alert_on": "critical"
        },
        "bat_check": {
            "command": "/usr/bin/bash ./bin/check-battery-charge.sh -c 25 -w 50",
            "interval": 20,
            "alert_on": "critical"
        },
        "mem_check": {
            "command": "/usr/bin/bash ./bin/check-memory-usage.sh -c 90 -w 80",
            "interval": 30,
            "alert_on": "ok"
        },
        "disk_check_root": {
            "command": "/usr/bin/bash ./bin/check-disk-usage.sh / -c 75 -w 50",
            "interval": 20,
            "alert_on": "ok"
        },
        "disk_check_home": {
            "command": "/usr/bin/bash ./bin/check-disk-usage.sh /home -c 75 -w 50",
            "interval": 30,
            "alert_on": "ok"
        }
    },     
    "handlers": { 
        "http_client-1": {
            "type": "http_client",
            "destination": "localhost:8080",                
            "parameters": {}
        },
        "my_file_writer-1": {
            "type": "file_writer",
            "destination": "/dev/stdout",
            "parameters": {}
        }
    }
}


